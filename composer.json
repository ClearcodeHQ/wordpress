{
  "name": "clearcode/wordpress",
  "type": "project",
  "license": "GPL-3.0+",
  "description": "WordPress boilerplate by Clearcode.",
  "homepage": "https://clearcode.cc",
  "authors": [
    {
      "name": "Clearcode",
      "homepage": "https://github.com/ClearcodeHQ"
    },
    {
      "name": "Piotr Niewiadomski",
      "homepage": "https://github.com/PiotrPress"
    }
  ],
  "keywords": [
    "wordpress", "wp", "blog", "cms", "composer"
  ],
  "support": {
    "issues": "https://github.com/ClearcodeHQ/wordpress/issues"
  },
  "config": {
    "preferred-install": "dist",
	"vendor-dir": "wordpress/wp-content/vendor"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.0",
    "composer/installers": "*",
    "johnpbloch/wordpress": "*"
  },
  "extra": {
    "installer-paths": {
      "wordpress/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('install/wp-config.php', 'wp-config.php');\"",
      "php -r \"copy('install/wordpress/.htaccess', 'wordpress/.htaccess');\""
    ]
  }
}